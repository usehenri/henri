{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "node scripts/prepublish.js",
    "pretest": "lerna bootstrap",
    "test:watch": "cross-env NODE_CONFIG_DIR=./packages/core/src/__tests__/config jest --coverage --verbose --watch",
    "test:ci": "cross-env NODE_CONFIG_DIR=./packages/core/src/__tests__/config jest --coverage --forceExit --runInBand --verbose --bail",
    "coveralls": "nyc --instrument=false --source-map=false report --temp-directory=./coverage --reporter=text-lcov | coveralls",
    "publish-canary": "lerna publish --yes --skip-git --exact -c",
    "packages:clean": "lerna clean --yes",
    "packages:install": "lerna exec -- yarn install",
    "packages:upgrade": "yarn upgrade-interactive --latest && lerna exec --concurrency 1 -- yarn upgrade-interactive --latest",
    "packages:bootstrap": "lerna bootstrap",
    "packages:maintenance": "npm run packages:clean && npm run packages:install && npm run packages:upgrade && npm run packages:bootstrap && exit"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.16.7",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^0.0.36",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.0",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.7",
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "@types/minimist": "^1.2.0",
    "@types/mongoose": "^5.0.5",
    "@types/node": "^9.6.2",
    "@types/passport": "^0.4.4",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/waterline": "^0.11.1",
    "@types/winston": "^2.3.9",
    "babel-eslint": "^8.2.2",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.18.2",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.12.3",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lerna": "^2.9.1",
    "lint-staged": "^7.0.3",
    "next": "5.1.0",
    "nuxt": "^1.4.0",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "supertest": "^3.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "template/.*",
      "pages/.*",
      "node_modules/*",
      "packages/.*/build",
      "packages/.*/build-es5",
      "packages/model",
      "packages/router",
      "packages/server",
      "packages/user",
      "packages/websocket",
      "packages/waterline",
      "packages/mongo",
      "packages/postgresql",
      "packages/mssql",
      "packages/react",
      "packages/sequelize",
      "packages/mysql",
      "packages/disk",
      "packages/jest-runtime/src/__tests__/test_root.*",
      "website/.*",
      "integration_tests/runtime-internal-module-registry/__mocks__"
    ],
    "collectCoverageFrom": [
      "**/packages/**/**/*.js",
      "!**/bin/**",
      "!**/cli/**",
      "!**/view/**",
      "!**/perf/**",
      "!**/test/**"
    ]
  }
}
